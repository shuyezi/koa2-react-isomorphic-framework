{
  "name": "koa-react-full",
  "version": "0.0.1",
  "description": "",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf ./dist & rimraf ./public & rimraf ./assetsMap.js",
    "buildClient": "webpack --config webpack.client.build.js --progress --color ${watch}",
    "buildServer": "webpack --config webpack.server.build.js --progress --color ${watch}",
    "predev": "rimraf ./public & rimraf ./assetsMap.js & NODE_ENV=development",
    "dev": "watch=--watch npm run buildClient",
    "predevServer": "rimraf ./dist && NODE_ENV=development",
    "devServer": "watch=--watch npm run buildServer",
    "server": "supervisor ./dist/app.js",
    "predeploy": "npm run clean && NODE_ENV=production",
    "deploy": "npm run buildClient && npm run buildServer",
    "postdeploy": "pm2 start ./dist/app.js"
  },
  "author": "jimmy | 673950957@qq.com",
